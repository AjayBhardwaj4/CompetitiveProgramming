#include <iostream>
#include<climits>
using namespace std;
 
int main() {
	int n;
	cin >> n;									
	
	int a[n],flag=0;
	for(int i=0;i<n;i++)
	{
		cin>>a[i];
		if(a[i]>=0)
		{
			flag=1;
		}
	}		
	
	long long sum=0,ne=0;
	if(!flag)
	{ 
		sum=INT_MIN;
		for(int i=0;i<n;i++)
	  {
		  if(a[i]>sum)
		  {
			  sum=a[i];
		  }
	  }
		ne=1;
		cout<<sum<<" "<<ne;
		
	}
 
	else
  {
    for(int i=0;i<n;i++)
	  {
		  if(a[i]>=0)
		  {
			  sum+=a[i];
			  ne++;
		  }
	  }
 
	  cout<<sum<<" "<<ne;
	
	}
	return 0;
	
}
